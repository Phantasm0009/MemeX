# Production Environment Variables for memexbot.xyz
# Copy this to .env and fill in your actual values

# ===== DISCORD BOT CONFIGURATION =====
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_guild_id_for_testing_optional
MARKET_CHANNEL_ID=your_market_channel_id_optional

# Bot Developer IDs (comma-separated Discord user IDs)
BOT_DEVELOPERS=1225485426349969518,your_additional_developer_ids

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
BACKEND_PORT=3001
DASHBOARD_PORT=3002
BACKEND_URL=https://memexbot.xyz

# ===== DATABASE (SUPABASE) =====
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# ===== API KEYS FOR REAL TREND DATA =====
# Twitter/X API (v2)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token

# ===== WEBHOOK URLS (DISCORD) =====
DAILY_WEBHOOK_URL=https://discord.com/api/webhooks/your_daily_webhook_id/your_daily_webhook_token
WEEKLY_WEBHOOK_URL=https://discord.com/api/webhooks/your_weekly_webhook_id/your_weekly_webhook_token

# ===== DOMAIN CONFIGURATION =====
DOMAIN=memexbot.xyz
SSL_EMAIL=your_email_for_letsencrypt@example.com

# ===== DOCKER CONFIGURATION =====
COMPOSE_PROJECT_NAME=memex
DOCKER_BUILDKIT=1
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
YOUTUBE_API_KEY=your_youtube_api_key
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token

# Security
JWT_SECRET=your_super_secret_jwt_key_for_dashboard_auth
ADMIN_PASSWORD=your_secure_admin_password

# Monitoring & Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Performance
CACHE_DURATION=300
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# TikTok Scraper Settings
TIKTOK_REQUEST_DELAY=2000
TIKTOK_USER_AGENTS=5

# Feature Flags
ENABLE_GLOBAL_EVENTS=true
ENABLE_TIKTOK_SCRAPING=true
ENABLE_REAL_TRENDS=true
ENABLE_QUEST_SYSTEM=true
